<div class="wrapper-top">
  <a class="logo" href="/"><button type="button" class="btn btn-warning"><img src="images/logo.png" alt="logo"></button></a>
  <h1 class="profile-top">Hello {{name}}!</h1>
  <a href="/info/add" class="btn btn-warning add-list-btn">Add another here!</a>
  <a class="logout" href="/logout"><button type="button" class="btn btn-danger btn-sm">Logout</button></a>
</div>

<div class="wrapper-profile">
  <h2>This is your favorite Watching List so far:</h2>
  {{#each result}}

  <div class="d-flex position-relative favorite-list">
    <img src="{{this.image_url}}" class="flex-shrink-0 me-3" alt="...">
    <div class="watch-list">
      <h3 class="mt-0">{{this.title}}</h3>
      <p class="synopsis">{{this.synopsis}}<a href="more" class="more">more</a></p>
      <p>üé¨  &nbsp Episodes: {{this.episodes}}</p>
      <p>‚≠ê  &nbsp Score of: {{this.score}}</p>
      <form method="POST" action="/profile/{{this.id}}/delete">
        <button type="submit" class="btn btn-warning">Delete</button>
      </form>
  </div>
</div> 
{{/each}}











